#kivy 1.11.1
<GradeCalc>
    id: calculator
    display: grade_input
    result: grade_output
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "vertical"
            size_hint: (1, .5)
            Label:
                id: grade_output
                canvas.before:
                    Color:
                        rgb: .13, .17, .18, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: ""
                font_size: 60
                text_size: self.size
                halign: "center"
                valign: "center"
            Label:
                id: grade_input
                canvas.before:
                    Color:
                        rgb: .13, .17, .18, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                text: ""
                font_size: 60
                text_size: self.size
                halign: "right"
                valign: "center"
        GridLayout:
            id: numbers
            cols: 3
            rows: 5
            spacing: 1
            size: root.width, root.height/2
            center_x: root.width/3
            center_y: root.height/2.5

            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "1"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "2"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "3"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "4"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "5"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "6"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "7"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "8"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "9"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "."
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "0"
                on_press: grade_input.text += self.text
            Button:
                background_normal: ""
                background_color: .2, .24, .26, 1
                font_size: 40
                text: "<="
                on_press: calculator.backspace_button(grade_input.text)
        Button:
            id: calculate
            background_normal: ""
            background_color: .2, .24, .26, 1
            font_size: 69
            size_hint: (1, .5)
            text: "Calculate"
            on_press: calculator.calculate_button(grade_input.text)